constraints                    	on
constraintscaling              	1.0
coordinates                    	structure.pdb
cutoff                         	9
energyfreq                     	5000
exclude                        	scaled1-4
extendedsystem                 	input.xsc
fullelectfrequency             	2
hydrogenscale                  	4
langevin                       	on
langevindamping                	0.1
langevintemp                   	$temperature
outputname                     	output
parmfile                       	structure.prmtop
pme                            	on
pmegridspacing                 	1.0
restart                        	on
restartfreq                    	5000
rigidbonds                     	all
1-4scaling                     	0.8333333
structure                      	structure.prmtop
switchdist                     	7.5
switching                      	on
tclforces                      	on
temperature                    	$temperature
timestep                       	4
xtcfile                        	output.xtc
xtcfreq                        	25000
run                            	$numsteps
